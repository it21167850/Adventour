<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb2">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        android:text="ADMIN DASHBOARD"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/btnmanage_user"
        android:layout_width="360dp"

        android:layout_height="68dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#01322D"
        android:text=" MANAGE CUSTOMER"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <Button
        android:id="@+id/button10"
        android:layout_width="360dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#01322D"
        android:text="MANAGE ROOMS"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnmanage_user" />

    <Button
        android:id="@+id/button11"
        android:layout_width="360dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#01322D"
        android:text="MANAGE TOURIST GUIDE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button10" />


    <Button
        android:id="@+id/button13"
        android:layout_width="360dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#01322D"
        android:text=" MANAGE GUIDE BOOK"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button12" />

    <Button
        android:id="@+id/button14"
        android:layout_width="360dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#01322D"
        android:text=" MANAGE USERS"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button13" />

    <Button
        android:id="@+id/button12"
        android:layout_width="360dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#01322D"
        android:text="CALCULATE TOTAL INCOME"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button11" />

</androidx.constraintlayout.widget.ConstraintLayout>